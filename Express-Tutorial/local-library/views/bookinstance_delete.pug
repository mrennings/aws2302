extends layout

block content
  h1 #{title}: #{book_instance._id}
  
  h3 Instance information
  div.inst_info
    p #{book.title}

    p Status: 
      if book_instance.status=='Available'
        span.text-success #{book_instance.status}
      else if book_instance.status=='Maintenance'
        span.text-danger #{book_instance.status}
      else
        span.text-warning #{book_instance.status}

    p Due to: #{book_instance.due_back_formatted}



  p Do you really want to delete this book instance?

  form(method='POST' action='')
    div.form-group
      input#bookinstanceid.form-control(type='hidden',name='bookionstanceid', required='true', value=book_instance._id )

    button.btn.btn-primary(type='submit') Delete
